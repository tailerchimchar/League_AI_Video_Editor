{
  "name": "league-ai-video-editor",
  "private": true,
  "scripts": {
    "dev": "concurrently -k -n api,web -c blue,green \"bun run dev:api\" \"bun run dev:web\"",
    "dev:api": "cd apps/api && .venv/Scripts/python -m uvicorn main:app --reload --port 8000",
    "dev:web": "cd apps/web && bunx --bun vite --port 8080"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
